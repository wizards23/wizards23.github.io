<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_zhuangxiang_xianjing_type_praent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px" >

                <TextView
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="券别名称："
                    android:textColor="@color/bule_main"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_xianjing_type"
                    android:layout_width="250px"
                    android:layout_height="60px"
                    android:background="@drawable/money_count"
                    android:gravity="center_vertical"
                    android:paddingLeft="5px"
                    android:text="请选择"
                    android:textColor="@color/back"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="数量："
                    android:textColor="@color/bule_main"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_zhuangxiang_xianjing_count"
                    android:layout_width="300px"
                    android:layout_height="60px"
                    android:background="@drawable/money_count"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/back"
                    android:paddingLeft="5px"
                    android:textSize="30px" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zhuangxiang_xianjing_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="40px"
                android:text="添加"
                android:textColor="@color/red"
                android:textSize="30px" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:gravity="center"
                    android:text="券别代码"
                    android:textColor="@color/bule_main"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.9"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/bule_main"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_zhuangxiang_xianjing_info"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >
            </ListView>

            <TextView
                android:id="@+id/tv_zhuangxiang_xianjing_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30px"
                android:text="合计：0"
                android:textColor="@color/red"
                android:textSize="35px" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_white_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="冠字号包编号："
                android:textColor="@color/red"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>