<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bank_parent"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/PDAsetting"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/users" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="280px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/login_title"
                style="@style/px_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="押运交接"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/yayun_backS5"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginRight="10px"
                android:src="@drawable/back_change" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px" >

            <LinearLayout
                android:layout_width="180px"
                android:layout_height="80px"
                android:background="@color/blue_title"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/px_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按手指"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="80px"
                android:background="@color/blue_top"
                android:orientation="vertical"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textViewtop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="45sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="240px"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/username11"
                        style="@style/px_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网点人员"
                        android:textColor="@color/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginBottom="10px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/yyjj_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/yy_leftName"
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="30px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="240px"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/username22"
                        style="@style/px_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网点人员"
                        android:textColor="@color/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginBottom="10px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/yyjj_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/yy_rightName"
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="30px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/gray_msg_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/yanshi"
            style="@style/px_30"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center"
            android:text="请第一位库管员按手指"
            android:textColor="@color/back" />
    </LinearLayout>

</LinearLayout>