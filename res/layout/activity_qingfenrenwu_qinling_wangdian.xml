<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_qingfenrenwu_qingling_wangdian"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#ffffff"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/iv_qingfenrenwu_qingling_wangdian_back"
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:src="@drawable/back_change" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/user_order" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="请领装箱网点" 
                    android:textSize="40px"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="#00aeFF"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/fg_qingfenrenwu_qingling_wangdian_loginUserInfo"
                    android:name="com.ljsw.tjbankpda.qf.fragment.LoginUserInfoFragment"
                    android:layout_width="match_parent"
                    android:layout_height="60px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_qingfenrenwu_qingling_wangdian_zhihangName"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:gravity="center"
                android:text="西青支行一线"
                android:textColor="@color/back"
                android:background="@color/white"
                android:textSize="40px"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/lv_qingfenrenwu_qingling_wangdian_Info"
                android:layout_width="match_parent"
                android:layout_height="540px" 
                android:divider="@color/white"
                android:dividerHeight="5px">
            </ListView>

        </LinearLayout>

</LinearLayout>