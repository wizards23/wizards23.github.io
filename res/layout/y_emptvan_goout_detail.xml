<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_top"
        android:orientation="vertical" >
    </LinearLayout>

    <fragment
        android:id="@+id/f3"
        android:name="com.fragment.pda.HeadUser_fragment"
        android:layout_width="match_parent"
        android:layout_height="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="72px"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/user_order" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginBottom="20px"
                    android:id="@+id/bizname"
                    style="@style/px_30"
               		 android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="27px"
                    android:text="钞箱出库明细" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_empty"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_address"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:gravity="center|top" >

            <Button
                android:id="@+id/money_box_detail"
                android:layout_width="200px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:background="@drawable/buttom_selector_bg"
                android:gravity="center"
                android:text="钞箱明细"
                android:textColor="@color/white"
                style="@style/px_30"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:gravity="center|top" >

             <Button
                android:id="@+id/box_do"
                android:layout_width="200px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:background="@drawable/buttom_selector_bg"
                android:gravity="center"
                android:text="出库操作"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>