<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <LinearLayout
        android:gravity="center"
        android:background="@color/blue_title"
        android:layout_width="match_parent"
        android:layout_height="123px" >

        <ImageView
            android:layout_marginRight="10px"
            android:id="@+id/imageView1"
            android:layout_width="49px"
            android:layout_height="50px"
            android:src="@drawable/finger_img" />

        <TextView
            android:layout_marginTop="5px"
           style="@style/px_30"
            android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清机加钞登录" />

        <ImageView
            android:layout_marginLeft="145px"
            android:id="@+id/imageView2"
            android:layout_width="64px"
            android:layout_height="65px"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="40px"
            android:background="@drawable/circle_edit_rudit"
            android:layout_width="450px"
            android:layout_height="53px" >

            <TextView
               style="@style/px_25"
                android:textColor="@color/gray"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构编号:" />

            <EditText
                android:textColor="@color/gray"
                android:background="#dde8f4"
                android:id="@+id/editText1"
                android:layout_width="320px"
                android:layout_height="45px"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="45px"
            android:background="@drawable/circle_edit_rudit"
            android:layout_width="450px"
            android:layout_height="53px" >

            <TextView
               style="@style/px_25"
                android:textColor="@color/gray"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="柜员编号:" />

            <EditText
                android:textColor="@color/gray"
                android:background="#dde8f4"
                android:id="@+id/editText2"
                android:layout_width="320px"
                android:layout_height="45px"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30px"
            android:layout_width="450px"
            android:layout_height="53px" >

            <TextView
                style="@style/px_30"
                android:textColor="@color/gray"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请加钞员按指纹" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:background="#d4d4d4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            style="@style/px_35"
            android:textColor="@color/gray"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证成功" />

        <ImageView
            android:layout_marginLeft="20px"
            android:id="@+id/imageView4"
            android:layout_width="56px"
            android:layout_height="56px"
            android:src="@drawable/sccuss" />

    </LinearLayout>

</LinearLayout>