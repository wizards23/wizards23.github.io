<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00aeFF" >

        <fragment 
            android:id="@+id/zhouzhuanxiang_fragment"
            android:name="com.fragment.pda.Head_fragment"
            android:layout_height="50px"
            android:layout_width="match_parent"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_weight="1"
        android:orientation="vertical" 
        android:gravity="center"
        android:background="#2459b2">

        <LinearLayout
            android:id="@+id/ll_zhouzhuanxiao_menu_all"
            android:layout_width="380px"
            android:layout_height="600px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_zhouzhuanxiao_menu_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_zhouzhuanxiao_menu_diaobo"
                    android:layout_width="190px"
                    android:layout_height="200px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                    android:id="@+id/iv_zhouzhuanxiao_menu_diaobo"
                        android:layout_width="110px"
                        android:layout_height="110px"
                        android:src="@drawable/diaobo" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/px_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="调拨管理"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zhouzhuanxiao_menu_yayun"
                    android:layout_width="190px"
                    android:layout_height="200px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                    	android:id="@+id/iv_zhouzhuanxiao_menu_yayun"
                        android:layout_width="110px"
                        android:layout_height="110px"
                        android:src="@drawable/yayun" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/px_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="押运管理"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zhouzhuanxiao_menu_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_zhouzhuanxiao_menu_qingfen"
                    android:layout_width="190px"
                    android:layout_height="200px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                    android:id="@+id/iv_zhouzhuanxiao_menu_qingfen"
                        android:layout_width="110px"
                        android:layout_height="110px"
                        android:src="@drawable/menu_qingfen" />

                    <TextView
                    	android:id="@+id/tv_zhouzhuanxiao_menu_qingfen"
                        style="@style/px_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="清分管理"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zhouzhuanxiao_menu_saomiao"
                    android:layout_width="190px"
                    android:layout_height="200px"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                    android:id="@+id/iv_zhouzhuanxiao_menu_saomiao"
                        android:layout_width="110px"
                        android:layout_height="110px"
                        android:src="@drawable/saomiao" />

                    <TextView
                   	 	android:id="@+id/tv_zhouzhuanxiao_menu_saomiao"
                        style="@style/px_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="周转箱扫描"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>