<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homemenu_box"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00aeFF"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/head_fragment"
                    android:name="com.example.app.fragment.Head_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="50px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="#00aeFF"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/user_order" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/px_30"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/updatepass"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="配送路线"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/jiaojie_shuaxin"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                    android:src="@drawable/refplace_cirle_press" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/luxianName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="无"
                    android:textColor="#000000"
                    android:textSize="30px"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zaosong_jiaojie"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/user_order2" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/px_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/updatepass"
                    android:text="早送交接"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/zaosongjiaojie_kuanxiangcount"
                    style="@style/px_25"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/business_number"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/zaosongjiaojie_wangdiancount"
                    style="@style/px_25"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/business_number2"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ListView
                android:id="@+id/zaochu_listView2"
                android:layout_width="match_parent"
                android:layout_height="400px" >
            </ListView>

            <LinearLayout
                android:id="@+id/wanshou_jiaojie"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/user_order" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/px_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/updatepass"
                    android:text="晚收交接"
                    android:textColor="@color/white" />

                 <TextView
                    android:id="@+id/wanrujiaojie_kuanxiangcount"
                    style="@style/px_25"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginLeft="160dp"
                    android:background="@drawable/business_number"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wanrujiaojie_wangdiancount"
                    style="@style/px_25"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/business_number2"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ListView
                android:id="@+id/wanshou_listView1"
                android:layout_width="match_parent"
                android:layout_height="510px"
                android:visibility="gone" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>