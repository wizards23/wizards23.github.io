<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_top"
        android:orientation="vertical" >
    </LinearLayout>

    <fragment
        android:id="@+id/f3"
        android:name="com.fragment.pda.HeadUser_fragment"
        android:layout_width="match_parent"
        android:layout_height="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="72px"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/user_order" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginBottom="20px"
                    android:id="@+id/textView3"
                    style="@style/px_30"
               		 android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="27px"
                    android:text="回收钞箱清点明细" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530px"
        android:orientation="vertical" >
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="50px"
                 android:gravity="center_vertical"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/TextView02"
                     style="@style/px_30"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:text="钞箱编号"
                     android:textColor="@color/red" />

                 <TextView
                     android:id="@+id/TextView01"
                     style="@style/px_30"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:background="#FFFFFF"
                     android:ems="10"
                     android:gravity="center"
                     android:text="品牌信息"
                     android:textColor="@color/red" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center_vertical"
                 android:orientation="horizontal" >

                 <ListView
                     android:id="@+id/listview_backcount"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1" >
                 </ListView>
             </LinearLayout>
         </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:textColor="@color/white"
            style="@style/px_30"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/countdo"
            android:layout_width="300px"
            android:layout_height="50px"
            android:text="开始清点" />

    </LinearLayout>

</LinearLayout>