<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/u20"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/u24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周转信息扫描"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />            
            <ImageView
                android:id="@+id/zhouzhuan_back"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/back_change" />
        </LinearLayout>
  
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_marginLeft="30sp"
            android:gravity="center_vertical"
            android:layout_height="120dp"
            android:textColor="#CD5C5C"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="请扫描周转箱编号......" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/u25"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="30sp"
            android:textColor="#CD5C5C"
            android:textSize="40sp"
            android:gravity="center_vertical"
            android:text="周转箱编号:" />

        <TextView
            android:id="@+id/zzx_smbhao"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="80dp"
            android:textColor="#000000"
            
            android:textSize="50sp"
            android:text="" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/u25"/>
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="30sp"
            android:textColor="#CD5C5C"
            android:textSize="40sp"
            android:gravity="center_vertical"
            android:text="所属机构:" />

        <TextView
            android:id="@+id/zzx_ssjigou"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="80dp"
            android:textColor="#000000"
            android:textSize="40sp"
            android:text="" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/u25"/>
        
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="30sp"
            android:textColor="#CD5C5C"
            android:textSize="40sp"
            android:gravity="center_vertical"
            android:text="所属线路:" />

        <TextView
            android:id="@+id/zzx_ssxl"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="80dp"
            android:textColor="#000000"
            android:textSize="40sp"
            android:text="" />
      
             
    </LinearLayout>

</LinearLayout>