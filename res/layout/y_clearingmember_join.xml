<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:paddingLeft="25px"
            android:layout_marginRight="10px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/users" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="280px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                 style="@style/px_30"
                android:textColor="@color/white"
                android:id="@+id/clear_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清分员交接" 
                android:layout_marginTop="48px" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center" >

             <ImageView
                 android:id="@+id/back_clear"
                 android:layout_width="70px"
                 android:layout_height="70px"
                 android:src="@drawable/back_cirle" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px" >

            <LinearLayout
                android:layout_width="180px"
                android:layout_height="80px"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/blue_title">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按入手指"
                    style="@style/px_30"
               		android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="80px"
                android:background="@color/blue_top"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310px"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="240px"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:orientation="vertical" 
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清分员"
                        style="@style/px_30" 
                        android:textColor="@color/back"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190px"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:orientation="vertical" >

                    <Button
                        
                        android:id="@+id/button1"
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:text="姓名:张三"
                        android:textColor="@color/white"
                        style="@style/px_30"
                        android:background="@drawable/buttom_selector_bg"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </LinearLayout>

            </LinearLayout>

           <LinearLayout
                android:layout_width="240px"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:orientation="vertical" 
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清分员"
                        style="@style/px_30" 
                        android:textColor="@color/back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190px"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:text="姓名:张三"
                        android:textColor="@color/white"
                        style="@style/px_30"
                        android:background="@drawable/buttom_selector_bg"
                        android:gravity="center"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_msg_bg"
        android:orientation="horizontal"
        android:gravity="center" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/px_30"
                android:textColor="@color/gray"
                android:text="认证成功" />

      
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="56px"
                android:layout_height="56px"
                android:src="@drawable/sccuss"
                android:layout_marginLeft="10px" />
        </LinearLayout>

   

</LinearLayout>