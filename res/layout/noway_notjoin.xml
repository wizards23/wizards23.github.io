<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_top"
        android:orientation="vertical" >

        <fragment 
            android:id="@+id/f3"
            android:name="com.fragment.pda.HeadUser_fragment"
            android:layout_width="match_parent"
            android:layout_height="50px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="72px"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/out_atm_box" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginBottom="20px"
                    android:id="@+id/title_noway"
                    style="@style/px_30"
               		 android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="27px"
                    android:text="出库操作" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/backnoway"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical" >
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

             <LinearLayout
                 android:id="@+id/lbiz_name"
                 android:layout_width="match_parent"
                 android:layout_height="50px"
                 android:layout_marginBottom="10px"
                 android:gravity="center_vertical"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/biznumber_noway"
                     style="@style/px_30"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10px"
                     android:layout_marginRight="10px"
                     android:gravity="center_vertical"
                     android:text="业务单号:"
                     android:textColor="@color/back" />

                 <TextView
                     android:id="@+id/biznumbervalue"
                     style="@style/px_25"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="#FFFFFF"
                     android:ems="10"
                     android:gravity="center_vertical"
                     android:text="JN909098998"
                     android:textColor="@color/red" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="50px"
                 android:layout_marginBottom="10px"
                 android:gravity="center_vertical"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/boxs"
                     style="@style/px_30"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10px"
                     android:layout_marginRight="10px"
                     android:gravity="center_vertical"
                     android:text="扫描钞箱数量:"
                     android:textColor="@color/back" />

                 <TextView
                     android:id="@+id/addstopnew_boxcount"
                     style="@style/px_45"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="#FFFFFF"
                     android:ems="10"
                     android:gravity="center"
                     android:text="0"
                     android:textColor="@color/red" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

             </LinearLayout>

             <Button
                android:id="@+id/outberforcheck"
                android:layout_marginLeft="15px"
                android:visibility="visible"
                android:background="@drawable/buttom_selector_bg"
                style="@style/px_22"
                android:textColor="@color/white"
                android:layout_width="230px"
                android:layout_height="45px"
                android:text="钞箱出入库前检测" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="50px"
                 android:gravity="center_vertical"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/TextView02"
                     style="@style/px_30"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:text="品牌信息"
                     android:textColor="@color/red" />

                 <TextView
                     android:id="@+id/TextView01"
                     style="@style/px_30"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:background="#FFFFFF"
                     android:ems="10"
                     android:gravity="center"
                     android:text="钞箱编号"
                     android:textColor="@color/red" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/fragment_noway"
                 android:layout_width="match_parent"
                 android:layout_height="280px"
                 android:gravity="center_vertical"
                 android:orientation="horizontal" >

                 <ListView
                     android:divider="@color/transparency"
                     android:dividerHeight="0px"
                     android:id="@+id/listview_noway"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1" >
                 </ListView>

             </LinearLayout>

         </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:enabled="false"
            android:textColor="@color/white"
            style="@style/px_30"
            android:background="@drawable/button_gray"
            android:layout_marginRight="50px"
            android:id="@+id/noway_out"
            android:layout_width="200px"
            android:layout_height="70px"
            android:text="出库" />

        <Button
            android:textColor="@color/white"
            style="@style/px_30"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/cancel_do"
            android:layout_width="200px"
            android:layout_height="70px"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>