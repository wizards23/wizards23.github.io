<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <LinearLayout
        android:gravity="center"
        android:background="@color/blue_title"
        android:layout_width="match_parent"
        android:layout_height="123px" >

        <ImageView
            android:layout_marginRight="10px"
            android:id="@+id/imageView1"
            android:layout_width="49px"
            android:layout_height="50px"
            android:src="@drawable/momey_img" />

        <TextView
           style="@style/px_30"
            android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清机加钞" />

        <ImageView
            android:layout_marginLeft="185px"
            android:id="@+id/imageView2"
            android:layout_width="64px"
            android:layout_height="65px"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="450px"
            android:layout_height="53px"
            android:layout_marginTop="50px" >

            <TextView
                android:id="@+id/textView2"
                style="@style/px_30"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请扫描ATM与钞箱编号..." />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="40px"
            android:background="@drawable/circle_edit_rudit"
            android:layout_width="450px"
            android:layout_height="53px" >

            <TextView
                style="@style/px_25"
                android:textColor="@color/gray"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATM编号:" />

            <EditText
                android:textColor="@color/gray"
                android:background="#dde8f4"
                android:id="@+id/editText1"
                android:layout_width="320px"
                android:layout_height="45px"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="45px"
            android:background="@drawable/circle_edit_rudit"
            android:layout_width="450px"
            android:layout_height="53px" >

            <TextView
                style="@style/px_25"
                android:textColor="@color/gray"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钞箱编号:" />

            <EditText
                android:textColor="@color/gray"
                android:background="#dde8f4"
                android:id="@+id/editText2"
                android:layout_width="320px"
                android:layout_height="45px"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="80px" >

            <Button
                style="@style/px_35"
                android:textColor="@color/white"
                android:background="@drawable/buttom_selector_bg"
                android:id="@+id/clearmachine"
                android:layout_width="380px"
                android:layout_height="match_parent"
                android:text="开始清机加钞操作" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>