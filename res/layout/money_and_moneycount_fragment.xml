<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="@color/gray_background"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                style="@style/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="钞箱编号"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/TextView02"
                style="@style/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="品牌信息"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/boxnum_detail"
                style="@style/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:text="加钞金额"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listview_boxdetial"
                android:layout_width="match_parent"
                android:layout_height="465px"
                android:layout_weight="1"
                android:background="@color/white" >
            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/money_count"
                    style="@style/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/money_count"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/money_countNum"
                    style="@style/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/moneyconut_num"
                    android:gravity="center"
                    android:text="0万"
                    android:textColor="@color/red" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>