<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_msg_bg"
     >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/blue_title" >

        <LinearLayout
            android:layout_width="72px"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/systemsetadd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="280px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                style="@style/px_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="25px"
                android:text="修改服务器地址"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/webserviceid"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="30px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        style="@style/px_30"
        android:textColor="@color/back"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_alignParentLeft="true"
        android:text="请在下方输入空间地址" />

    <EditText
        android:paddingLeft="5px"
        android:text=""
        style="@style/px_22"
        android:background="@color/white"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_marginTop="80px"
        android:textColor="@color/back"
        style="@style/px_25"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/TextView01"
        style="@style/px_30"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:text="请在下方输入webservice地址"
        android:textColor="@color/back" />

    <EditText
        android:paddingLeft="5px"
        android:text=""
        style="@style/px_22"
        android:id="@+id/webservice"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@color/white"
        android:ems="10" />

    <LinearLayout
        android:layout_marginTop="50px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            
            android:textColor="@color/white"
            style="@style/px_30"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/changeweb"
            android:layout_width="250px"
            android:layout_height="70px"
            android:text="确定保存" />

    </LinearLayout>

</LinearLayout>