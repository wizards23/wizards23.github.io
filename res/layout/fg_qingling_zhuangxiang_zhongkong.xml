<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginTop="20px" >

                <TextView
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="凭证种类："
                    android:textColor="@color/red"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_zhongkong_type"
                    android:layout_width="250px"
                    android:layout_height="60px"
                    android:background="@drawable/money_count"
                    android:gravity="center_vertical"
                    android:paddingLeft="5px"
                    android:text="请选择"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:text="数量："
                    android:textColor="@color/red"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_zhuangxiang_zhongkong_count"
                    android:layout_width="300px"
                    android:layout_height="60px"
                    android:background="@drawable/money_count"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="5px"
                    android:textSize="30px" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zhuangxiang_zhongkong_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="50px"
                android:text="添加"
                android:textColor="@color/red"
                android:textSize="30px" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="5px"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="已录入:"
                    android:textColor="@color/red"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_zhongkong_yiluru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textSize="35px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:text="未录入:"
                    android:textColor="@color/red"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_zhongkong_weiluru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textSize="35px"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_margin="5px"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:gravity="center"
                    android:text="凭证种类"
                    android:textColor="@color/red"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.9"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/red"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lv_zhuangxiang_zhongkong_info"
                android:layout_width="400px"
                android:layout_height="50px"
                android:divider="@color/white"
                android:layout_gravity="center" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>